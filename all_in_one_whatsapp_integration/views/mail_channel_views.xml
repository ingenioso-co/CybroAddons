<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- This XML defines a new view that inherits from 'mail.discuss_channel_view_form'.
        It adds a fields for the phone number in the form view. -->
    <record id="discuss_channel_view_form" model="ir.ui.view">
        <field name="name">
            discuss.channel.view.form.inherit.all.in.one.whatsapp.integration
        </field>
        <field name="model">discuss.channel</field>
        <field name="inherit_id" ref="mail.discuss_channel_view_form"/>
        <field name="arch" type="xml">
            <field name="description" position="after">
                <field name="phone"/>
            </field>
        </field>
    </record>
</odoo>
