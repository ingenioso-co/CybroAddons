<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="contact_us_banner" name="Contact Banner">
        <section class="subscribe">
            <div class="container">
                <div class="wrapper">
                    <div class="sub_text">
                        "Essentials, Redefined. Discover Gadgets That Fit
                        Your Life."
                    </div>
                    <a href="/contactus" class="btn-primary">
                        Contact Us
                    </a>
                </div>
            </div>
        </section>
    </template>
    <template id="contact_us_snippet_thumbnail"
              inherit_id="website.snippets"
              priority="8">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_voltro.contact_us_banner"
               t-thumbnail="/theme_voltro/static/src/images/banner/about-banner.png"/>
        </xpath>
    </template>
</odoo>