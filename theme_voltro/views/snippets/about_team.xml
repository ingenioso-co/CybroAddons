<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="about_team" name="About Team">
        <section class="about_team">
            <div class="wrapper">
                <div class="container">
                    <div class="team">
                        <div class="card_wrapper">
                            <div class="img_wrapper">
                                <img src="/theme_voltro/static/src/images/about/Frame 874.png"
                                     alt=""/>
                            </div>
                            <div class="card_bottom">
                                <div class="name">Jacob Thomas</div>
                                <div class="position">
                                    Founder &amp; Chairman
                                </div>
                                <div class="icons">
                                    <img src="/theme_voltro/static/src/images/about/Icon-Twitter.png"
                                         alt=""/>
                                    <img src="/theme_voltro/static/src/images/about/icon-instagram.png"
                                         alt=""/>
                                    <img src="/theme_voltro/static/src/images/about/Icon-Linkedin.png"
                                         alt=""/>
                                </div>
                            </div>
                        </div>
                        <div class="card_wrapper">
                            <div class="img_wrapper">
                                <img src="/theme_voltro/static/src/images/about/Frame 874.png"
                                     alt=""/>
                            </div>
                            <div class="card_bottom">
                                <div class="name">Jacob Thomas</div>
                                <div class="position">
                                    Founder &amp; Chairman
                                </div>
                                <div class="icons">
                                    <img src="/theme_voltro/static/src/images/about/Icon-Twitter.png"
                                         alt=""/>
                                    <img src="/theme_voltro/static/src/images/about/icon-instagram.png"
                                         alt=""/>
                                    <img src="/theme_voltro/static/src/images/about/Icon-Linkedin.png"
                                         alt=""/>
                                </div>
                            </div>
                        </div>
                        <div class="card_wrapper">
                            <div class="img_wrapper">
                                <img src="/theme_voltro/static/src/images/about/Frame 874.png"
                                     alt=""/>
                            </div>
                            <div class="card_bottom">
                                <div class="name">Jacob Thomas</div>
                                <div class="position">
                                    Founder &amp; Chairman
                                </div>
                                <div class="icons">
                                    <img src="/theme_voltro/static/src/images/about/Icon-Twitter.png"
