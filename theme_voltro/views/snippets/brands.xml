<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="brand_logos" name="Brand Banner">
        <section class="brands">
            <div class="wrapper">
                <div class="container">
                    <div class="owl-carousel" id="brands">
                        <div class="item">
                            <div class="fix_height">
                                <div class="img_wrapper">
                                    <img src="/theme_voltro/static/src/images/brand/logo-14 1.png"
                                         alt=""/>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="fix_height">
                                <div class="img_wrapper">
                                    <img src="/theme_voltro/static/src/images/brand/logo-16 1.png"
                                         alt=""/>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="fix_height">
                                <div class="img_wrapper">
                                    <img src="/theme_voltro/static/src/images/brand/logo-25 1.png"
                                         alt=""/>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="fix_height">
                                <div class="img_wrapper">
                                    <img src="/theme_voltro/static/src/images/brand/logo-26 1.png"
                                         alt=""/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <template id="brand_logos_snippet_thumbnail"
              inherit_id="website.snippets"
              priority="8">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_voltro.brand_logos"
               t-thumbnail="/theme_voltro/static/src/images/banner/about-banner.png"/>
        </xpath>
    </template>


</odoo>