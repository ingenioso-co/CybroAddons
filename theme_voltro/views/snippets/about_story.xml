<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="about_story" name="About Story">
        <section class="about_story">
            <div class="wrapper">
                <div class="container">
                    <!-- Our Story -->
                    <div class="our_story">
                        <div class="row">
                            <div class="col-lg-6 col-12">
                                <div class="our_story_right">
                                    <h3>Our Story</h3>
                                    <p>
                                        Launched in 2015, TechMart is South
                                        Asia's leading online marketplace
                                        for
                                        gadgets, with a strong presence in
                                        Bangladesh. Offering a wide range
                                        of
                                        innovative marketing, data,
                                        and service solutions, TechMart
                                        features 10,500 sellers and 300 top
                                        brands,
                                        serving 3 million tech enthusiasts
                                        across the region.
                                    </p>
                                    <p>
                                        Exclusive has more than 1 Million
                                        products to offer, growing at a
                                        very
                                        fast.
                                        Exclusive offers a diverse
                                        assotment
                                        in categories ranging from
                                        consumer.
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-12">
                                <div class="our_story_left">
                                    <img src="/theme_voltro/static/src/images/about/about-1.png"
                                         alt=""/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="about_story_snippet_thumbnail"
              inherit_id="website.snippets"
              priority="8">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_voltro.about_story"
               t-thumbnail="/theme_voltro/static/src/images/banner/about-banner.png"/>
        </xpath>
    </template>


</odoo>