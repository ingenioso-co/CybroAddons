<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="home_banner" name="Home Banner">
        <section class="banner">
            <div class="wrapper">
                <div class="container">
                    <div class="slider_grid">
                        <!-- Main Carousel -->
                        <div id="main-carousel" class="splide">
                            <div class="splide__track">
                                <ul class="splide__list">
                                    <li class="splide__slide">
                                        <img src="/theme_voltro/static/src/images/banner/1.png"
                                             class="rotating-image"
                                             alt="Slide 1"/>
                                    </li>
                                    <li class="splide__slide">
                                        <img src="/theme_voltro/static/src/images/banner/2.png"
                                             class="rotating-image"
                                             alt="Slide 2"/>
                                    </li>
                                    <li class="splide__slide">
                                        <img src="/theme_voltro/static/src/images/banner/3.png"
                                             class="rotating-image"
                                             alt="Slide 3"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="right animeMian">
                            <div class="banner_right">
                                <div class="offer">
                                    Flat 30% off on all Digital
                                </div>
                                <div class="banner_heading">
                                    <h1 data-speed="0.95"
                                        class="split-text">Bowers &amp;
                                        Wilkins
                                    </h1>
                                    <h1 data-speed="0.9"
                                        class="split-text">
                                        Bowers &amp; Wilkins
                                    </h1>
                                    <h1 data-speed="0.85"
                                        class="split-text">Bowers &amp;
                                        Wilkins
                                    </h1>
                                    <h1 data-speed="0.8"
                                        class="split-text">
                                        Bowers &amp; Wilkins
                                    </h1>
                                    <h1 data-speed="0.75"
                                        class="split-text">Bowers &amp;
                                        Wilkins
                                    </h1>
                                    <h1 data-speed="0.7"
                                        class="split-text">
                                        Bowers &amp; Wilkins
                                    </h1>
                                </div>
                                <p>Allow yourself to be immersed in
                                    sound.
                                    Don't let the ordinary confine you.
                                </p>
                                <a href="/shop" class="btn btn-primary">
                                    SHOP
                                    NOW
                                </a>
                            </div>
                            <!-- Thumbnail Carousel -->
                            <div id="thumbnail-carousel" class="splide">
                                <div class="splide__track">
                                    <ul class="splide__list">
                                        <li class="splide__slide">
                                            <img src="/theme_voltro/static/src/images/banner/1.png"
                                                 alt="Thumbnail 1"/>
                                        </li>
                                        <li class="splide__slide">
                                            <img src="/theme_voltro/static/src/images/banner/2.png"
                                                 alt="Thumbnail 2"/>
                                        </li>
                                        <li class="splide__slide">
                                            <img src="/theme_voltro/static/src/images/banner/3.png"
                                                 alt="Thumbnail 3"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <template id="banner_snippet_carousel_thumbnail"
              inherit_id="website.snippets"
              priority="8">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_voltro.home_banner"
               t-thumbnail="/theme_voltro/static/src/images/banner/about-banner.png"/>
        </xpath>
    </template>

</odoo>