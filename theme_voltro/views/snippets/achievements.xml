<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="about_achievements" name="Achievements">
        <section class="about_achievements">
            <div class="wrapper">
                <div class="container">
                    <div class="achievements">
                        <div class="stats_wrapp">
                            <div class="stat">
                                <img src="/theme_voltro/static/src/images/about/1.svg"
                                     alt=""/>
                                <h2 class="number" data-target="10">0</h2>
                                <p class="type">Sallers active our site</p>
                            </div>
                            <div class="stat">
                                <img src="/theme_voltro/static/src/images/about/2.svg"
                                     alt=""/>
                                <h2 class="number" data-target="99">0</h2>
                                <p class="type">Monthly Produduct Sale</p>
                            </div>
                            <div class="stat active">
                                <img src="/theme_voltro/static/src/images/about/3.svg"
                                     alt=""/>
                                <h2 class="number" data-target="60">0</h2>
                                <p class="type">Customer active in our
                                    site
                                </p>
                            </div>
                            <div class="stat">
                                <img src="/theme_voltro/static/src/images/about/Services.png"
                                     alt=""/>
                                <h2 class="number" data-target="30">0</h2>
                                <p class="type">Anual gross sale in our
                                    site
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="about_achievements_snippet_thumbnail"
              inherit_id="website.snippets"
              priority="8">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_voltro.about_achievements"
               t-thumbnail="/theme_voltro/static/src/images/banner/about-banner.png"/>
        </xpath>
    </template>


</odoo>